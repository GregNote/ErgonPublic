<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/primary_framed"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/setNameLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <pl.garedgame.game.ui.BaseView
        android:id="@+id/buildingsView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        tools:background="#ff0000"
        android:layout_margin="4dp"
        app:layout_constraintDimensionRatio="h,400:433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/costs"/>

    <TextView
        android:id="@+id/costs"
        style="@style/NormalText"
        android:text="-"
        android:gravity="top|start"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/buildingsView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/choose"/>

    <TextView
        android:id="@+id/choose"
        style="@style/NormalButton"
        android:text="WYBIERZ"
        android:visibility="gone"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintStart_toEndOf="@id/buildingsView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cancelChoose"/>

    <TextView
        android:id="@+id/cancelChoose"
        style="@style/NormalButton"
        android:text="ANULUJ"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintStart_toEndOf="@id/buildingsView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
